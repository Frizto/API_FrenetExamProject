<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\test\internal-nlog-AspNetCore.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- File Target for all log messages with basic details -->
    <target xsi:type="File" name="allfile" fileName="c:\test\nlog-AspNetCore-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File Target for own log messages with extra web details using some ASP.NET core renderers -->
    <target xsi:type="File" name="ownFile-web" fileName="c:\test\nlog-AspNetCore-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

    <!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
    <target xsi:type="Console" name="lifetimeConsole" layout="${MicrosoftConsoleLayout}" />

    <!-- File Target for all log messages with basic details -->
    <target xsi:type="File" name="localError" fileName="${specialfolder:folder=MyDocuments}/nlog-AspNetCore-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|${scopeproperty:TransactionId}" />


    <!--Database Target for create log messages with basic details -->
    <target name="dbCreate"
        xsi:type="Database"
        connectionString="${environment:variable=ASPNETCORE_FRENETEXAMLOGS_DEV}"
        commandType="StoredProcedure"
        commandText="[dbo].[NLog_AddEntry_p]"
        >
      <parameter name="@machineName"    layout="${machinename}" />
      <parameter name="@logged"         layout="${date}" />
      <parameter name="@level"          layout="${level}" />
      <parameter name="@message"        layout="${message}" />
      <parameter name="@logger"         layout="${logger}" />
      <parameter name="@properties"     layout="${all-event-properties:separator=|}" />
      <parameter name="@exception"      layout="${exception:tostring}" />
      <parameter name="@transactionId"  layout="${scopeproperty:TransactionId}" />
    </target>

    <!--Database Target for update log messages with basic details -->
    <target name="dbUpdate"
          xsi:type="Database"
          connectionString="${environment:variable=DB_CONNECTION_STRING}"
          commandType="StoredProcedure"
          commandText="[dbo].[NLog_UpdateEntry_p]">
      <parameter name="@id"             layout="${event-context:item=id}" />
      <parameter name="@machineName"    layout="${machinename}" />
      <parameter name="@logged"         layout="${date}" />
      <parameter name="@level"          layout="${level}" />
      <parameter name="@message"        layout="${message}" />
      <parameter name="@logger"         layout="${logger}" />
      <parameter name="@properties"     layout="${all-event-properties:separator=|}" />
      <parameter name="@exception"      layout="${exception:tostring}" />
      <parameter name="@transactionId"  layout="${scopeproperty:TransactionId}" />

    </target>

    <!--Database Target for delete log messages with basic details -->
    <target name="dbDelete"
          xsi:type="Database"
          connectionString="${environment:variable=DB_CONNECTION_STRING}"
          commandType="StoredProcedure"
          commandText="[dbo].[NLog_DeleteEntry_p]">
      <parameter name="@id" layout="${event-context:item=id}" />
      <parameter name="@transactionId"  layout="${scopeproperty:TransactionId}" />
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="System.*" finalMinLevel="Warn" />
    <logger name="Microsoft.*" finalMinLevel="Warn" />
    <logger name="Microsoft.Hosting.Lifetime*" finalMinLevel="Info" />
    <logger name="*" minlevel="Trace" writeTo="ownFile-web" />

    <!-- Rule for Error Operation -->
    <logger name="ErrorLogger" minlevel="Error" writeTo="localError" />
    
    <!-- Rule for Create Operation -->
    <logger name="CreateLogger" minlevel="Info" writeTo="dbCreate" />

    <!-- Rule for Update Operation -->
    <logger name="UpdateLogger" minlevel="Info" writeTo="dbUpdate" />

    <!-- Rule for Delete Operation -->
    <logger name="DeleteLogger" minlevel="Info" writeTo="dbDelete" />
  </rules>
</nlog>