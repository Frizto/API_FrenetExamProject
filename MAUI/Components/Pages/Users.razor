@page "/users"
@using ApplicationLayer.CQRS.User.Queries
@using ApplicationLayer.DTOs.User
@inject IUserAPIService UserAPIService

<PageTitle>Users Data</PageTitle>

<h3>Users Data</h3>

@if (usersList == null)
{
    <p>Loading...</p>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usersList)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>

}

@code {
    public ReadUserQuery userQuery = new ReadUserQuery();
    IEnumerable<ReadUserDTO>? usersList;

    protected override async Task OnInitializedAsync()
    {
        usersList = await UserAPIService.API_ReadAllUsers(userQuery);
    }
}
